{
  "name": "bonfire",
  "version": "0.0.1",
  "private": true,
  "description": "Bonfire - Mobile application with React Native + Expo and Supabase backend",
  "scripts": {
    "app:start": "cd app && expo start",
    "app:start:clear": "cd app && expo start --clear",
    "supabase:start": "supabase start --workdir .",
    "supabase:stop": "supabase stop --workdir .",
    "supabase:reset": "supabase db reset --workdir .",
    "supabase:status": "supabase status --workdir .",
    "supabase:types": "supabase gen types typescript --local --workdir . > shared/types/supabase.ts"
  },
  "devDependencies": {
    "supabase": "^1.200.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.0.0"
}
